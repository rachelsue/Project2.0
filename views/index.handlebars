<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>Food Diary!</h1>
        <h3>Track nutritional contents of any meal, just add ingredients and amounts below: </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="ingredient-text">Search for ingredient: </label>
            <input type="text" id="ingredient-text" class="form-control" aria-describedby="ingredient-text" placeholder="Ingredient...">
          </div>
          <div class="form-group">
            <label for="ingredient-amount">Ingredient amount (grams): </label>
            <textarea class="form-control" id="ingredient-amount" aria-describedby="ingredient-amount" placeholder="amount in grams..."></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
      <div class="col-6">
        <h4>Searches:</h4>
        <ul id="search-list" class="list-group">
          {{#each searches}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="getSearches/{{this.text}}">{{this.text}} || Amount: {{this.amount}} grams</a>
            <button class="btn btn-danger float-right delete" id="searchDelete">ｘ</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-6 offset-3">
        <h4>Ingredients:</h4>
        <ul id="ingredient-list" class="list-group">
          {{#each meals}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="postSearches/{{this.text}}">{{this.text}} || Amount: {{this.amount}} grams</a>
            <button class="btn btn-danger float-right delete">ｘ</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <a href="/login">Sign In with Google</a>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>


